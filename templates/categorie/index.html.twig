{% extends 'categorie.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}

    
        
        <div class="container">
        
            <div class="row">

                <div class="col-12 mb-3">
                    <h3 class="ps-5">manger paca</h3>
                </div>

                <div class="col-4">
                    <ul class="list-group">
                        {% for categorieoffre in categorieDansOffres %}
                        <a href="{{ path('article', { id1: categorieoffre.id, idoffre: idatransmettre }) }}">
                        <li class="list-group-item">{{ categorieoffre.titre }}</li></a>
                        {% endfor %}
                      </ul>
                </div>

                <div class="col-8">

                    <div class="row mb-5">
                        <div class="col text-center">
                          
                          <div class="dropdown">
                            <button class="btn btn-danger dropdown-toggle w-50" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                              Filtrer
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                              <li><a class="dropdown-item" href="#">Action</a></li>
                              
                            </ul>
                          </div>
                        </div>
                    </div>

                    <div class="row row-cols-1 row-cols-md-3 g-4 mt-5">

                      {% for article in articles %}
                        <div class="col">
                          <div class="card h-100">
                            <img src="{{ vich_uploader_asset(article, 'imageFile', 'App\\Entity\\Article')|imagine_filter('article') }}" class="card-img-top" alt="...">
                            <div class="card-body">
                              <h5 class="card-title">{{ article.titre }}</h5>
                              <p class="card-text">{{ article.contenu|striptags|raw }}</p>
                            </div>
                            <div class="card-footer">
                              <small class="text-muted">Last updated 3 mins ago</small>
                            </div>
                          </div>
                        </div>

                        {% endfor %}  
                    </div>

                    <div class="row d-flex justify-content-center mt-5 text-end">
                      {{ knp_pagination_render(articles, 'pagination.html.twig') }}
                    </div>
              
                </div>
            </div>
        </div>

    

{% endblock %}
